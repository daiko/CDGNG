{% include 'twig/header.twig' %}

<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="?view=">CDG</a>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <li class='dropdown'>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
          <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true">
        </a>
        <ul class="dropdown-menu">
          <li><a href="?view=admin">{% if not connectedUser %}<span class="glyphicon glyphicon-lock" aria-hidden="true"> {% endif %}Paramètres</a></li>
          {% if connectedUser %}
          <li role="separator" class="divider"></li>
          <li><a href='?action=logout'>Déconnecter ({{ connectedUser.login }})</a></li>
          {% endif %}
        </ul>
      </li>
    </ul>
  </div>
</nav>
{% include 'twig/messages.twig' %}
<div class="container">
  <div class="center-block well">
    <form action="?view=admin&action=login" method="post">
      <div class='form-group row'>
        <input id='login' type='text' name='login' placeholder='Identifiant' required />
      </div>
      <div class='form-group row'>
        <input id='password' type='password' name='password' placeholder='Mot de passe' required />
      </div>
      <div class='form-group row'>
        <button class='btn btn-primary ' type='submit'>Se connecter</button>
        <a class='btn btn-default' href='?view='>Annuler</a>
      </div>
    </form>
  </div>
</div>
{% include 'twig/footer.twig' %}
