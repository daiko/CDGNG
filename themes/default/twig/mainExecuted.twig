<form method="post" action="index.php" class="form-horizontal span5">
  <div class="form-group">
    <label class="control-label col-sm-3" for="ics">Calendrier</label>
    <div class="col-sm-5">
      <select name="ics[]" class="form-control">
        {% for name,path in calendars %}
          <option id='{{ name }}' name='ics' value='{{ name }}'>{{ name }}</option>
        {% endfor %}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-3" for="date">Date appartenant à l'année</label>
    <div class="col-sm-5">
      <input id='date' type='text' class="form-control" name="date" value="{{ now|date("d-m-Y") }}" required />
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3"></div>
    <div class="col-sm-5">
      <button id="Realised" class="btn btn-info" type="submit" formaction='?view=csvExecuted' name="action">
        <span class="glyphicon glyphicon-download-alt" aria-hidden="true"> Exporter
      </button>
    </div>
  </div>
</form>
