<form class="form-inline" action="index.php?view=csvModes" method="post">
  <button class="btn btn-info btn-sm" type="submit"><span class="glyphicon glyphicon-download-alt"></span> Exporter (CSV)</button>
</form>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th class='col-md-1'>Code</th>
      <th class='col-md-3'>Intitulé</th>
      <th class='col-md-8'>Description</th>
    </tr>
  </thead>

  <tbody>
    {% for code, mode in modes %}
      <tr>
        <td>{{ code }}</td>
        <td>{{ mode.Intitulé }}</td>
        <td>{{ mode.Description }}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
