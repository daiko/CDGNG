<form action="index.php?view=csvActions" method="post" class="form-inline">
  <button id="exportTableauAction" class="btn btn-info" type="submit">
    <i class="icon-download-alt icon-white"></i>
    Exporter
  </button>
  <label class="checkbox">
    <input type="checkbox" id="showArchived" name="archives" value="1">Voir les actions archivées.</input>
  </label>
</form>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Code</th>
      <th>Intitulé</th>
      <th>Description</th>
      <th>Référent</th>
    </tr>
  </thead>
  <tbody>
    {% for code, action in actions %}
    {% if action.Visible == 1 %}
    <tr class="actual">
    {% else %}
    <tr class="archived">
    {% endif %}
      <td>{{ code }}</td>
      <td>{{ action.Intitulé }}</td>
      <td>{{ action.Description }}</td>
      <td>{{ action.Referent }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
